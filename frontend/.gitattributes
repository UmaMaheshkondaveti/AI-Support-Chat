# Automatically normalize line endings
* text=auto

# Force LF line endings for source code files
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.sh text eol=lf

# Binary files - do not modify line endings
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.mp4 binary
*.ttf binary
*.woff binary
*.woff2 binary
*.eot binary
